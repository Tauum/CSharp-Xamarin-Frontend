<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GOV.SearchMethod" Title="Search Method">

    <ContentPage.Content>
        <Grid ColumnDefinitions = "*,*,*,*,*" RowDefinitions="*,*,*,*,*,*,*,*"  Padding="15" VerticalOptions="Center"  HorizontalOptions="Center">

            <Button Text="QR Scan" Clicked="BarcodeScan" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3"/>

            <Entry
                x:Name="ProductInput" Placeholder="Name" Grid.Column="2" Grid.Row="3" VerticalOptions="Center"  HorizontalOptions="Center">
            </Entry>

            <Button Text="Manual Search" Clicked="ManualSearch" 
                        HorizontalOptions="Fill" VerticalOptions="Fill"  Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>
