<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GOV.Views.CategoryEntryPage" 
             Title="Category Entry">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="ID" />
            <Label Text="{Binding ID}" />

            <Label Text="Name" />
            <Entry x:Name="CategoryNameInput" Text="{Binding Catgory}" Placeholder="Category Name" />

            <Button Text="Delete" Clicked="DeleteButton"/>
            <Button Text="Save" Clicked="SaveButton" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>