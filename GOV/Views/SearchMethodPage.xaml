<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GOV.SearchMethodPage" Title="Search Method">

    <ContentPage.Content>
        <StackLayout Margin="15" VerticalOptions="Center">

            <Button Text="QR Scan" Clicked="BarcodeScan"/>

            <Frame >
                <Entry x:Name="ProductInput" Placeholder="Name" WidthRequest="90" HeightRequest="90" Completed="ManualSearch" HorizontalTextAlignment="Center"/>
            </Frame>

            <Button Text="Manual Search" Clicked="ManualSearch"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
