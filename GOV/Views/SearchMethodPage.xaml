<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GOV.SearchMethodPage" Title="Search Method">

    <ContentPage.Content>

        <Frame VerticalOptions="Center" Margin="15">
            <StackLayout Margin="15" VerticalOptions="Center">
                
                <Button Text="QR Scan" Clicked="BarcodeScan"/>

                <Entry x:Name="ProductInput" Placeholder="Product name" WidthRequest="90" Completed="ManualSearch" HorizontalTextAlignment="Center"/>

                <Button Text="Manual Search" Clicked="ManualSearch"/>

            </StackLayout>
        </Frame>
        
    </ContentPage.Content>
</ContentPage>
